<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="#ffffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_cardbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/edit_location"
            android:layout_width="fill_parent"
            android:layout_height="38.0dip"
            android:layout_weight="1.0"
            android:onClick="onCardBarButtons"
            android:padding="4.0dip"
            android:src="@drawable/location64"
            android:tag="0" />

        <ImageView
            android:id="@+id/edit_photo"
            android:layout_width="fill_parent"
            android:layout_height="38.0dip"
            android:layout_weight="1.0"
            android:onClick="onCardBarButtons"
            android:padding="4.0dip"
            android:src="@drawable/photo64"
            android:tag="0" />

        <ImageView
            android:id="@+id/edit_weather"
            android:layout_width="fill_parent"
            android:layout_height="38.0dip"
            android:layout_weight="1.0"
            android:onClick="onCardBarButtons"
            android:padding="4.0dip"
            android:src="@drawable/weather64"
            android:tag="0" />

        <ImageView
            android:id="@+id/edit_emotion"
            android:layout_width="fill_parent"
            android:layout_height="38.0dip"
            android:layout_weight="1.0"
            android:onClick="onCardBarButtons"
            android:padding="7.0dip"
            android:src="@drawable/emotion64"
            android:tag="0" />
    </LinearLayout>

    <ImageView
        android:id="@id/divider"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_divider" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="fill_parent"
        android:layout_height="220.0dip" />

</LinearLayout>